<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_contract_form_view_inherit" model="ir.ui.view">
        <field name="name">hr.contract.form.view.inherit</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other']" position="before">
               <page name="job_details" string="Job Details">
                   <group>
                       <group>
                           <field name="job_functional_id"/>
                           <field name="job_qualitative_id"/>
                           <field name="job_title_id"/>
                           <field name="financial_degree"/>
                           <field name="job_degree"/>
                       </group>
                       <group>
                           <field name="starting_degree_salary"/>
                           <field name="duration"/>
                           <field name="promotion_percent"/>
                           <field name="monthly_salary"/>
                       </group>
                   </group>
               </page>
            </xpath>
        </field>
    </record>

</odoo>
