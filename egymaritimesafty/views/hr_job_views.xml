<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--Form Views-->
        <record id="view_hr_job_employee_form" model="ir.ui.view">
            <field name="name">hr.job.employee.form</field>
            <field name="model">hr.job</field>
            <field name="arch" type="xml">
                <form string="Job">
                    <sheet>
                        <div class="oe_title oe_read_only">
                            <label for="name" class="oe_edit_only"/>
                            <group>
                                <h1>
                                    <field name="name"/>
                                </h1>
                            </group>
                        </div>
                        <group>
                            <group>
                                <field name="job_title_degree_id"/>
                                <field name="job_functional_id" string="Job Functional Group"/>
                                <field name="job_qualitative_id" string="Job Qualitative Group"/>
                                <field name="job_title_id" string="Job Title"/>
                                <field name="job_degree" string="Job Degree"/>
                            </group>
                            <group name="recruitment">
                                <field name="company_id" options="{'no_create': True}"
                                       groups="base.group_multi_company" invisible="1"/>
                                <field name="department_id"/>
                                <field name="emp_no" string="Number of Employees"/>
                            </group>
                            <group>
                                <field name="financial_degree" invisible="1"/>
                                <field name="starting_degree_salary"/>
                                <field name="duration"/>
                                <field name="promotion_percent"/>
                                <field name="monthly_salary"/>
                                <field name="minimum_allowance"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" options="{'open_attachments': True}"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_hr_job_functional_form" model="ir.ui.view">
            <field name="name">hr.job.functional.form</field>
            <field name="model">hr.job.functional</field>
            <field name="arch" type="xml">
                <form string="Job Functional Group">
                    <sheet>
                        <div class="oe_title">
                            <group>
                                <h1>
                                    <field name="full_name"/>
                                </h1>
                            </group>
                        </div>
                        <group>
                            <group>
                                <field name="name" string="Name of the Job Functional group"/>
                                <field name="emp_no"/>
                            </group>
                            <group>
                                <field name="job_qualitative_ids"
                                       string="The qualitative groups subdivided from this Job Functional Group:"
                                       widget="one2many"
                                       create="false">
                                    <tree create="false">
                                        <field name="name" nolabel="1"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hr_job_qualitative_form" model="ir.ui.view">
            <field name="name">hr.job.qualitative.form</field>
            <field name="model">hr.job.qualitative</field>
            <field name="arch" type="xml">
                <form string="Job Qualitative Group">
                    <sheet>
                        <div class="oe_title">
                            <group>
                                <h1>
                                    <field name="full_name"/>
                                </h1>
                            </group>
                        </div>
                        <group>
                            <group>
                                <field name="job_functional_id" string="Job Functional Group"/>
                                <field name="name" string="Job Qualitative Group Name"/>
                                <field name="emp_no"/>
                            </group>
                            <group>
                                <field name="job_title_ids"
                                       string="Job titles subdivided from this Job Qualitative Group:"
                                       widget="one2many">
                                    <tree create="false">
                                        <field name="name" nolabel="1"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hr_job_title_form" model="ir.ui.view">
            <field name="name">hr.job.title.form</field>
            <field name="model">hr.job.title</field>
            <field name="arch" type="xml">
                <form string="Jobs">
                    <sheet>
                        <div class="oe_title">
                            <group>
                                <h1>
                                    <field name="full_name"/>
                                </h1>
                            </group>
                        </div>
                        <group>
                            <group>
                                <field name="job_functional_id" string="Job Functional Group"/>
                                <field name="job_qualitative_id" string="Job Qualitative Group"/>
                                <field name="name" string="Job Name"/>
                                <field name="emp_no" string="Number of Employees"/>
                            </group>
                            <group>
                                <field name="job_degree_ids"
                                       string="Job titles subdivided from this Job Qualitative Group:"
                                       widget="one2many">
                                    <tree create="false">
                                        <field name="name" nolabel="1"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hr_job_degree_form" model="ir.ui.view">
            <field name="name">hr.job.degree.form</field>
            <field name="model">hr.job.degree</field>
            <field name="arch" type="xml">
                <form string="Job Degree">
                    <sheet>
                        <div class="oe_title">
                            <group>
                                <h1>
                                    <field name="full_name"/>
                                </h1>
                            </group>
                        </div>
                        <group>
                            <group>
                                <field name="job_functional_id" string="Job Functional Group"/>
                                <field name="job_qualitative_id" string="Job Qualitative Group"/>
                                <field name="job_title_id"/>
                                <field name="name" string="Job Degree"/>
                            </group>
                            <group>
                                <field name="emp_no"/>
                            </group>
                            <group>
                                <field name="starting_degree_salary"/>
                                <field name="duration"/>
                                <field name="monthly_salary"/>
                                <field name="minimum_allowance"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--Tree Views-->
        <record id="view_hr_job_functional_tree" model="ir.ui.view">
            <field name="name">hr.job.functional.tree</field>
            <field name="model">hr.job.functional</field>
            <field name="arch" type="xml">
                <tree string="Job Functional Groups">
                    <field name="name" string="Job Functional Groups"/>
                    <field name="emp_no"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_job_qualitative_tree" model="ir.ui.view">
            <field name="name">hr.job.qualitative.tree</field>
            <field name="model">hr.job.qualitative</field>
            <field name="arch" type="xml">
                <tree string="Job Qualitative Groups">
                    <field name="name" string="Job Qualitative Groups"/>
                    <field name="job_functional_id" string="Job Functional Groups"/>
                    <field name="emp_no"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_title_tree" model="ir.ui.view">
            <field name="name">hr.job.title</field>
            <field name="model">hr.job.title</field>
            <field name="arch" type="xml">
                <tree string="Job Titles">
                    <field name="job_functional_id" string="Job Functional Groups"/>
                    <field name="job_qualitative_id" string="Job Qualitative Groups"/>
                    <field name="name" string="Job Titles"/>
                    <field name="emp_no" string="Number of Employees"/>
                </tree>
            </field>
        </record>

        <record id="view_hr_job_degree_tree" model="ir.ui.view">
            <field name="name">hr.job.degree</field>
            <field name="model">hr.job.degree</field>
            <field name="arch" type="xml">
                <tree string="Job Degrees">
                    <field name="job_functional_id" string="Job Functional Groups"/>
                    <field name="job_qualitative_id" string="Job َQualitative Groups"/>
                    <field name="job_title_id" string="Job Titles"/>
                    <field name="name" string="Job Degree"/>
                    <field name="emp_no"/>
                </tree>
            </field>
        </record>

        <!--Actions-->
        <record id="action_open_hr_job" model="ir.actions.act_window">
            <field name="name">Job Positions</field>
            <field name="res_model">hr.job</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p>
                    Create Job Position...
                </p>
            </field>
        </record>

        <record id="action_open_job_functional" model="ir.actions.act_window">
            <field name="name">Job Functional Groups</field>
            <field name="res_model">hr.job.functional</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create Job Functional Group...
                </p>
            </field>
        </record>

        <record id="action_open_job_qualitative" model="ir.actions.act_window">
            <field name="name">Job Qualitative Groups</field>
            <field name="res_model">hr.job.qualitative</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create Job Qualitative Group...
                </p>
            </field>
        </record>

        <record id="action_open_job_title" model="ir.actions.act_window">
            <field name="name">Job Titles</field>
            <field name="res_model">hr.job.title</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create Job Title...
                </p>
            </field>
        </record>

        <record id="action_open_job_degree" model="ir.actions.act_window">
            <field name="name">Job Degree</field>
            <field name="res_model">hr.job.degree</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create Job Degree...
                </p>
            </field>
        </record>

        <!--MenuItems-->
        <menuitem
                id="menu_hr_job"
                name="Jobs"
                parent="hr.menu_hr_root"
                sequence="5"/>

        <menuitem
                id="menu_hr_job_employee_user"
                name="Job Positions"
                action="action_open_hr_job"
                parent="menu_hr_job"
                sequence="1"/>

        <menuitem
                id="menu_hr_job_functionals"
                name="Job Functional Groups"
                action="action_open_job_functional"
                parent="menu_hr_job"
                sequence="2"/>

        <menuitem
                id="menu_hr_job_qualitative"
                name="Job Qualitative Groups"
                action="action_open_job_qualitative"
                parent="menu_hr_job"
                sequence="3"/>

        <menuitem
                id="menu_hr_job_title"
                name="Job Titles"
                action="action_open_job_title"
                parent="menu_hr_job"
                sequence="4"/>

        <menuitem
                id="menu_hr_job_degree"
                name="Job Degrees"
                action="action_open_job_degree"
                parent="menu_hr_job"
                sequence="5"/>

    </data>
</odoo>