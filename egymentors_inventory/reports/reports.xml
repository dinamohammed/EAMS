<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <report
                id="purchase_request_report"
                model="purchase.request"
                report_type="qweb-pdf"
                string="Purchase Request"
                menu="False"
                name="egymentors_inventory.report_purchase_request"
                file="egymentors_inventory.report_purchase_request"
        />

        <report
                id="tender_request_report"
                model="tender.request"
                report_type="qweb-pdf"
                string="Tender Request"
                menu="False"
                name="egymentors_inventory.report_tender_request"
                file="egymentors_inventory.report_tender_request"
        />

        <report
                id="purchase_requisition_financial_xlsx_report"
                model="purchase.requisition"
                string="Dumping Quotations Financial Report"
                report_type="xlsx"
                name="egymentors_inventory.report_purchase_req_financial"
                file="egymentors_inventory.report_purchase_req_financial"
                attachment_use="False"
        />

        <report
                id="purchase_requisition_technical_xlsx_report"
                model="purchase.requisition"
                string="Dumping Quotations Technical Report"
                report_type="xlsx"
                name="egymentors_inventory.report_purchase_req_technical"
                file="egymentors_inventory.report_purchase_req_technical"
                attachment_use="False"
        />

        <report
                id="purchase_requisition_price_report"
                model="purchase.requisition"
                string="Request for Quotation"
                report_type="qweb-pdf"
                name="egymentors_inventory.report_purchase_requisition_price"
                file="egymentors_inventory.report_purchase_requisition_price"
                attachment_use="False"
        />

        <report
                id="purchase_order_check_report"
                model="purchase.order"
                string="Request to Extract Check"
                report_type="qweb-pdf"
                name="egymentors_inventory.report_purchase_order_check"
                file="egymentors_inventory.report_purchase_order_check"
                attachment_use="False"
        />

        <report
                id="purchase_order_note_report"
                model="purchase.order"
                string="Purchase Note"
                report_type="qweb-pdf"
                name="egymentors_inventory.report_purchase_order_note"
                file="egymentors_inventory.report_purchase_order_note"
                attachment_use="False"
        />

        <record id="po_paperformat" model="report.paperformat">
            <field name="name">PO Paper Format</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">140</field>
        </record>

        <report
                id="purchase.action_report_purchase_order"
                model="purchase.order"
                string="Purchase Order"
                report_type="qweb-pdf"
                name="purchase.report_purchaseorder"
                file="purchase.report_purchaseorder"
                attachment_use="False"
                print_report_name="
                (object.state in ('draft', 'sent') and 'Request for Quotation - %s' % (object.name) or
                'Purchase Order - %s' % (object.name))"
        />

        <report
                string="Request for Quotation"
                id="purchase.report_purchase_quotation"
                model="purchase.order"
                report_type="qweb-pdf"
                name="purchase.report_purchaseorder"
                file="purchase.report_purchaseorder"
                attachment_use="False"
                print_report_name="'Request for Quotation - %s' % (object.name)"
        />

        <report
                id="report_inventory_adjustment_xlsx"
                string="Inventory Adjustment Excel"
                model="stock.inventory"
                report_type="xlsx"
                name="egymentors_inventory.report_inventory_adjustment_xlsx"
                file="egymentors_inventory.report_inventory_adjustment_xlsx"/>

        <report
                id="report_inv_adj_ar_xlsx"
                string=" "
                model="stock.inventory"
                report_type="xlsx"
                name="egymentors_inventory.report_inv_adj_ar_xlsx"
                file="egymentors_inventory.report_inv_adj_ar_xlsx"/>

        <record id="action_report_financial_record" model="ir.actions.report">
            <field name="name">Financial Record Report</field>
            <field name="model">purchase.financial.record</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">egymentors_inventory.report_financial_record</field>
            <field name="report_file">egymentors_inventory.report_financial_record</field>
            <field name="print_report_name">'Financial Record - %s' % (object.requisition_id.name)</field>
            <field name="binding_model_id" ref="model_purchase_financial_record"/>
        </record>

        <record id="action_report_technical_record" model="ir.actions.report">
            <field name="name">Technical Record Report</field>
            <field name="model">purchase.technical.record</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">egymentors_inventory.report_technical_record</field>
            <field name="report_file">egymentors_inventory.report_technical_record</field>
            <field name="print_report_name">'Technical Record - %s' % (object.requisition_id.name)</field>
            <field name="binding_model_id" ref="model_purchase_technical_record"/>
        </record>

    </data>
</odoo>