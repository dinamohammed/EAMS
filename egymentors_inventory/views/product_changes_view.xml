<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="product_template_form_view_inherit11" model="ir.ui.view">
            <field name="name">product.template.common.form.inherit11</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']/group[1]/group[1]/field[@name='barcode']" position="after">
                    <field name="ref_2"/>
                </xpath>
            </field>
        </record>
        
        <record id="product_variant_easy_edit_view_inherit11" model="ir.ui.view">
            <field name="name">product.product.view.form.easy.inherit11</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[1]/group[@name='codes']/field[@name='barcode']" position="after">
                    <field name="ref_2"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
