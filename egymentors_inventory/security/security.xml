<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="module_category_operations_purchase_request" model="ir.module.category">
            <field name="name">Purchase Request</field>
            <field name="description">Helps you manage purchase request users.</field>
            <field name="sequence">9</field>
        </record>

        <record id="group_purchase_request_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="egymentors_inventory.module_category_operations_purchase_request"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_purchase_request_audit" model="res.groups">
            <field name="name">Audit</field>
            <field name="category_id" ref="egymentors_inventory.module_category_operations_purchase_request"/>
            <field name="implied_ids" eval="[(4, ref('group_purchase_request_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_purchase_request_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="egymentors_inventory.module_category_operations_purchase_request"/>
            <field name="implied_ids"
                   eval="[(4, ref('group_purchase_request_user')), (4, ref('group_purchase_request_audit'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_purchase_request_general_manager" model="res.groups">
            <field name="name">General Manager</field>
            <field name="category_id" ref="egymentors_inventory.module_category_operations_purchase_request"/>
            <field name="implied_ids"
                   eval="[(4, ref('group_purchase_request_user')), (4, ref('group_purchase_request_audit')), (4, ref('group_purchase_request_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="module_category_operations_tender_request" model="ir.module.category">
            <field name="name">Tender Request</field>
            <field name="description">Helps you manage tender request users.</field>
            <field name="sequence">9</field>
        </record>

        <record id="group_tender_request_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="egymentors_inventory.module_category_operations_tender_request"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_tender_request_audit" model="res.groups">
            <field name="name">Audit</field>
            <field name="category_id" ref="egymentors_inventory.module_category_operations_tender_request"/>
            <field name="implied_ids" eval="[(4, ref('group_tender_request_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_tender_request_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="egymentors_inventory.module_category_operations_tender_request"/>
            <field name="implied_ids"
                   eval="[(4, ref('group_tender_request_user')), (4, ref('group_tender_request_audit'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_tender_request_general_manager" model="res.groups">
            <field name="name">General Manager</field>
            <field name="category_id" ref="egymentors_inventory.module_category_operations_tender_request"/>
            <field name="implied_ids"
                   eval="[(4, ref('group_tender_request_user')), (4, ref('group_tender_request_audit')), (4, ref('group_tender_request_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!--Purchase Record Rule:-->
        <record id="user_see_his_own_purchase_request_rule" model="ir.rule">
            <field name="name">User See His Purchase Request Only</field>
            <field name="model_id" ref="model_purchase_request"/>
            <field name="domain_force">['|', ('user_id', '=', user.id), ('responsible_ids', 'in', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name='perm_create' eval='True'/>
            <field name='perm_read' eval='True'/>
            <field name='perm_unlink' eval='True'/>
            <field name='perm_write' eval='True'/>
        </record>

        <record id="manager_see_all_purchase_request_rule" model="ir.rule">
            <field name="name">Purchase Request Manager</field>
            <field name="model_id" ref="model_purchase_request"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('egymentors_inventory.group_purchase_request_general_manager'))]"/>
            <field name='perm_create' eval='True'/>
            <field name='perm_read' eval='True'/>
            <field name='perm_unlink' eval='True'/>
            <field name='perm_write' eval='True'/>
        </record>

        <!--Tender Record Rule-->
        <record id="user_see_his_own_tender_request_rule" model="ir.rule">
            <field name="name">User See His Tender Request Only</field>
            <field name="model_id" ref="model_tender_request"/>
            <field name="domain_force">
                ['|', ('user_id', '=', user.id), ('tender_responsible_ids', 'in', user.id)]
            </field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name='perm_create' eval='True'/>
            <field name='perm_read' eval='True'/>
            <field name='perm_unlink' eval='True'/>
            <field name='perm_write' eval='True'/>
        </record>

        <record id="manager_see_all_tender_request_rule" model="ir.rule">
            <field name="name">Purchase Request Manager</field>
            <field name="model_id" ref="model_tender_request"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('egymentors_inventory.group_purchase_request_general_manager'))]"/>
            <field name='perm_create' eval='True'/>
            <field name='perm_read' eval='True'/>
            <field name='perm_unlink' eval='True'/>
            <field name='perm_write' eval='True'/>
        </record>

        <!--Purchase Requisition Record Rule-->
        <record id="user_see_his_own_purchase_requisition_rule" model="ir.rule">
            <field name="name">User See His Purchase Requisition Only</field>
            <field name="model_id" ref="model_purchase_requisition"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name='perm_create' eval='True'/>
            <field name='perm_read' eval='True'/>
            <field name='perm_unlink' eval='True'/>
            <field name='perm_write' eval='True'/>
        </record>

        <record id="manager_see_all_purchase_requisition_rule" model="ir.rule">
            <field name="name">Purchase Requisition Manager</field>
            <field name="model_id" ref="model_purchase_requisition"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('egymentors_inventory.group_purchase_request_general_manager'))]"/>
            <field name='perm_create' eval='True'/>
            <field name='perm_read' eval='True'/>
            <field name='perm_unlink' eval='True'/>
            <field name='perm_write' eval='True'/>
        </record>

    </data>
</odoo>
