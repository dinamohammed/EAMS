<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record model="ir.module.category" id="module_category_tender_request">
            <field name="name">Tender Request</field>
            <field name="description">Helps you manage your tender request.</field>
            <field name="sequence">4</field>
        </record>

        <record id="group_tender_request_user" model="res.groups">
            <field name="name">Tender request User</field>
            <field name="category_id" ref="module_category_tender_request"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <record id="group_tender_request_department" model="res.groups">
            <field name="name">Tender Request Department Manager</field>
            <field name="category_id" ref="module_category_tender_request"/>
            <field name="implied_ids" eval="[(4, ref('group_tender_request_user'))]"/>
        </record>

        <record id="group_tender_request_manager" model="res.groups">
            <field name="name">Tender Request Manager</field>
            <field name="category_id" ref="module_category_tender_request"/>
            <field name="implied_ids" eval="[
                (4, ref('group_tender_request_user')),
                (4, ref('stock.group_stock_user')),
            ]"/>
        </record>
        
        <record id="tender_request_employee_rule" model="ir.rule">
            <field name="name">Employee Tender Request</field>
            <field name="model_id" ref="model_tender_request"/>
            <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <record id="tender_request_lines_employee_rule" model="ir.rule">
            <field name="name">Employee Tender Request Lines</field>
            <field name="model_id" ref="model_tender_request_line"/>
            <field name="domain_force">[('tender_id.employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="tender_request_department_rule" model="ir.rule">
            <field name="name">Department Tender Request</field>
            <field name="model_id" ref="model_tender_request"/>
            <field name="domain_force">['|',('employee_id.parent_id.user_id','=', user.id), ('employee_id.department_id.manager_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('egymentors_tender_exchange.group_tender_request_department'))]"/>
        </record>

        <record id="tender_request_lines_department_rule" model="ir.rule">
            <field name="name">Department Tender Request Lines</field>
            <field name="model_id" ref="model_tender_request_line"/>
            <field name="domain_force">['|',('tender_id.employee_id.parent_id.user_id','=', user.id), ('tender_id.employee_id.department_id.manager_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('egymentors_tender_exchange.group_tender_request_department'))]"/>
        </record>
        
        <record id="tender_request_manager_rule" model="ir.rule">
            <field name="name">Manager tender requests</field>
            <field name="model_id" ref="model_tender_request"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[
                (4, ref('stock.group_stock_user')),
                (4, ref('egymentors_tender_exchange.group_tender_request_manager')),
            ]"/>
        </record>
        
        <record id="tender_request_lines_manager_rule" model="ir.rule">
            <field name="name">Manager Tender Requests Lines</field>
            <field name="model_id" ref="model_tender_request_line"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[
                (4, ref('stock.group_stock_user')),
                (4, ref('egymentors_tender_exchange.group_tender_request_manager'))
            ]"/>
        </record>
    </data>
</odoo>