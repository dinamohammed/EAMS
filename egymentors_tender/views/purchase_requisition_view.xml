<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tender Requisition-->
        <record id="tender_purchase_requisition_form_view_inherit" model="ir.ui.view">
            <field name="name">tender.purchase.requisition.form.inherit</field>
            <field name="model">purchase.requisition</field>
            <!--            <field name="mode">primary</field>-->
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='currency_id']" position="after">
                    <label for="request_id"/>
                    <div class="o_row">
                        <field name="request_added" invisible="1"/>
                        <label for="multi_requisition" string="Multi" class="oe_inline oe_edit_only"/>
                        <field name="multi_requisition" class="oe_inline oe_edit_only"/>
                        <field name="request_id"
                               class="oe_inline"
                               attrs="{
                        'readonly':['|',('request_added','=',True), ('state','in',('open','done', 'cancel'))],
                        'invisible':[('multi_requisition','=',True)]
                        }"/>
                        <field name="request_ids" attrs="{'readonly':['|',('request_added','=',True),
                        ('state','in',('open','done', 'cancel'))],
                        'invisible':[('multi_requisition','=',False)]}" widget="many2many_tags" class="oe_inline"/>

                        <button name="load_pr_lines" string="Add PR Lines" type="object"
                                class="oe_inline" icon="fa-plus"
                                attrs="{'invisible':['|',('state','in',('open','done', 'cancel')),
                                ('request_added','=',True)]}"/>
                        <button name="remove_pr_lines" string="Remove PR Lines" type="object"
                                class="oe_inline oe_edit_only" icon="fa-random"
                                attrs="{'invisible':['|',('state','in',('open','done', 'cancel')),
                                ('request_added','=',False)]}"/>
                    </div>
                </xpath>

                <xpath expr="//field[@name='line_ids']/tree" position="inside">
                    <field name="request_line_ids" optional="hide" widget="many2many_tags"/>
                </xpath>

                <xpath expr="//page[@name='products']" position="after">
                    <page string="Signatures" name="agreement_signatures">
                        <field name="signatures_ids" widget="section_and_note_one2many" mode="tree">
                            <tree string="Signatures Lines" editable="bottom">
                                <field name="name"/>
                                <field name="title"/>
                                <field name="rank"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Signatures 2" name="agreement_signatures_tender">
                        <field name="signatures_tender_ids" widget="section_and_note_one2many" mode="tree">
                            <tree string="Signatures 2 Lines" editable="bottom">
                                <field name="name"/>
                                <field name="title"/>
                                <field name="rank"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

            </field>
        </record>

        <menuitem id="menu_purchase_requisition_pro_mgt_tr"
                  name="Tender Agreements"
                  groups="purchase.group_purchase_manager,purchase.group_purchase_user"
                  sequence="5"
                  parent="menu_tender_request_main"
                  action="purchase_requisition.action_purchase_requisition"/>

