<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="internal_requisition_document">
        <t t-call="web.external_layout">
            <!--<t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>-->
            <div class="page">
                <div class="oe_structure"/>

                <div class="row">
                    <div class="col-4"/>
                    <div class="col-4 text-center">
                        <h4>
                            <strong>
                                Internal Requisition
                                <span t-field="doc.name"/>
                                -
                                <span t-field="doc.state"/>
                            </strong>
                        </h4>
                    </div>
                </div>

                <br/>

                <div class="row">
                    <table width="100%" class="table table-sm">
                        <thead class="thead-light">
                            <tr>
                                <th>Employee</th>
                                <th>Requisition Responsible</th>
                                <th>Department</th>
                                <th>Company</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <span t-field="doc.employee_id"/>
                                </td>
                                <td>
                                    <span t-field="doc.requisition_responsible_id.name"/>
                                </td>
                                <td>
                                    <span t-field="doc.department_id.name"/>
                                </td>
                                <td>
                                    <span t-field="doc.company_id.name"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="row mt32 mb32">
                    <table width="100%" class="table table-sm">
                        <thead class="thead-light">
                            <tr>
                                <th>Requisition Date</th>
                                <th>Received Date</th>
                                <th>Requisition Deadline</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <span t-field="doc.date_request"/>
                                </td>
                                <td>
                                    <span t-field="doc.date_receive"/>
                                </td>
                                <td>
                                    <span t-field="doc.date_end"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <br/>

                <div class="row">
                    <h4 clas="text-center">Other Information</h4>
                </div>

                <div class="row mb32">
                    <table width="100%" class="table table-sm">
                        <thead class="thead-light">
                            <tr>
                                <th>Confirmed By</th>
                                <th>Confirmed Date</th>
                                <th>Department Manager</th>
                                <th>Department Approval Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <span t-field="doc.employee_confirm_id"/>
                                </td>
                                <td>
                                    <span t-field="doc.date_confirm"/>
                                </td>
                                <td>
                                    <span t-field="doc.approve_manager_id"/>
                                </td>
                                <td>
                                    <span t-field="doc.date_manager_approved"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="row mb32">
                    <table width="100%" class="table table-sm">
                        <thead class="thead-light">
                            <tr>
                                <th>Approved By</th>
                                <th>Approved Date</th>
                                <th>Rejected By</th>
                                <th>Rejected Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <span t-field="doc.approve_employee_id"/>
                                </td>
                                <td>
                                    <span t-field="doc.date_user_approved"/>
                                </td>
                                <td>
                                    <span t-field="doc.reject_employee_id"/>
                                </td>
                                <td>
                                    <span t-field="doc.date_user_reject"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <br/>

                <div class="row">
                    <h4 clas="text-center">Picking Details</h4>
                </div>

                <div class="row mb32">
                    <table width="100%" class="table table-sm">
                        <thead class="thead-light">
                            <tr>
                                <th>Source Location</th>
                                <th>Destination Location</th>
                                <th>Internal Picking</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <span t-field="doc.location_id.name"/>
                                </td>
                                <td>
                                    <span t-field="doc.dest_location_id.name"/>
                                </td>
                                <td>
                                    <span t-field="doc.delivery_picking_id.name"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <t t-if="doc.note">
                    <div class="row">
                        <h4 clas="text-center">Reason for Requisition</h4>
                    </div>
                    <table class="table table-responsive">
                        <tr style="border: 2px solid black;">
                            <td>
                                <span t-field="doc.note"/>
                            </td>
                        </tr>
                    </table>
                </t>

            </div>

            <!--#################################################################-->
            <div style="page-break-before:always;"/>
            <!--#################################################################-->

            <div class="page">

                <div class="row">
                    <div class="col-6">
                        Authority Name:
                        <span t-if="doc.company_id.name" t-field="doc.department_id.name"/>
                    </div>
                    <div class="col-2"/>
                    <div class="col-4">
                        <strong class="text-right">(Form No. (2) government stores)</strong>
                    </div>
                </div>

                <br/>

                <div class="row">
                    <div class="col-3"/>
                    <div class="col-4 text-right">
                        <h4>
                            <strong>Internal Requisition</strong>
                        </h4>
                    </div>
                    <div class="col-2 text-left">
                        <h6>
                            Sustainable
                            ـــــــــــــــــــــ
                            Consumable
                        </h6>
                    </div>
                    <div class="col-3"/>
                </div>

                <br/>

                <div class="row">
                    <div class="col-2">
                        <strong>Location:</strong>
                        <span t-if="doc.location_id.name" t-field="doc.location_id.name"/>
                    </div>
                    <div class="col-4">
                        <strong>Destination Location:</strong>
                        <span t-if="doc.dest_location_id.name" t-field="doc.dest_location_id.name"/>
                    </div>
                    <div class="col-3">
                        <strong>Requisition Number:</strong>
                        <span t-if="doc.name" t-field="doc.name"/>
                    </div>
                    <div class="col-3">
                        <strong>Date:</strong>
                        <span t-if="doc.date_request" t-field="doc.date_request"/>
                    </div>
                </div>

                <div class="row">
                    <div class="col-8">
                        <strong>Applicant name: (store / department / worker)</strong>
                        <span t-if="doc.requisition_responsible_id.name" t-field="doc.requisition_responsible_id.name"/>
                    </div>
                    <div class="col-4">
                        <strong>(*) Requisition Document:</strong>
                    </div>
                </div>

                <br/>

                <div class="row">
                    <table width="100%" class="table table-sm">
                        <thead class="text-center">
                            <tr>
                                <th>Internal Reference</th>
                                <th>Product Name</th>
                                <th>UOM</th>
                                <th>Requested Quantity</th>
                                <th>Authorized Quantity</th>
                                <th>Disbursed Quantity</th>
                                <th>(**)Product State</th>
                                <th>Unit Price</th>
                                <th>Cost</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.requisition_line_ids" t-as="line">
                                <tr>
                                    <td>
                                        <span t-field="line.product_id.default_code"/>
                                    </td>
                                    <td>
                                        <span t-field="line.product_id.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="line.uom.name"/>
                                    </td>
                                    <td>
                                        <span t-esc="line.qty"/>
                                    </td>
                                    <td>
                                        <span t-esc="line.product_uom_qty"/>
                                    </td>
                                    <td>
                                        <span t-esc="line.quantity_done"/>
                                    </td>
                                    <td/>
                                    <td>
                                        <span t-esc="line.product_id.standard_price"/>
                                    </td>
                                    <td>
                                        <span t-esc="line.product_id.standard_price * line.quantity_done"/>
                                    </td>
                                    <td/>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>

                <div class="row">
                    <div class="col-2 text-center">
                        <p>Applicant Signature</p>
                        <p>..........................</p>
                    </div>
                    <div class="col-3 text-center">
                        <p>Authorized to Disburse</p>
                        <p>Warehouse manager</p>
                        <p>..........................</p>
                    </div>
                    <div class="col-3 text-center">
                        <p>Disbursement Done</p>
                        <p>Store Keeper</p>
                        <p>..........................</p>
                    </div>
                    <div class="col-2 text-center">
                        <p>De-listing Clerk</p>
                        <p>..........................</p>
                    </div>
                    <div class="col-2 text-center">
                        <p>Recipient's Signature</p>
                        <p>..........................</p>
                    </div>
                </div>

                <div>
                    <p>
                        ـــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــ
                    </p>
                    <h6>
                        (*) Deficit list - document for deduction of lost or damaged items - selling report - operation
                        request - donations that are not the main activity of the authority.
                    </h6>
                    <h6>
                        (**) New - used - repairable - fragment or scrap.
                    </h6>
                </div>

            </div>

            <div style="page-break-before:always;"/>
        </t>
    </template>

    <template id="internal_requisition">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="lang" t-value="user.partner_id.lang"/>
                <t t-call="material_internal_requisition.internal_requisition_document" t-lang="lang"/>
            </t>
        </t>
    </template>

</odoo>
