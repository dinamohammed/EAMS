<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record model="ir.module.category" id="module_category_internal_requisition">
            <field name="name">Material Internal Requisitions</field>
            <field name="description">Helps you manage your material purchase requisition.</field>
            <field name="sequence">3</field>
        </record>

        <record id="group_internal_requisition_user" model="res.groups">
            <field name="name">Material Internal Requisition User</field>            
            <field name="category_id" ref="module_category_internal_requisition"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <record id="group_internal_requisition_department" model="res.groups">
            <field name="name">Material Internal Requistion Department Manager</field>
            <field name="category_id" ref="module_category_internal_requisition"/>
            <field name="implied_ids" eval="[(4, ref('group_internal_requisition_user'))]"/>            
        </record>

        <record id="group_internal_requisition_manager" model="res.groups">
            <field name="name">Material Purchase Requisition Manager</field>            
            <field name="category_id" ref="module_category_internal_requisition"/>
            <field name="implied_ids" eval="[
                (4, ref('group_internal_requisition_user')),
                (4, ref('stock.group_stock_user')),
            ]"/>
        </record>
        
        <record id="internal_requisition_employee_rule" model="ir.rule">
            <field name="name">Employee Material Internal Requistion</field>
            <field name="model_id" ref="model_material_internal_requisition"/>
            <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <record id="internal_requisition_lines_employee_rule" model="ir.rule">
            <field name="name">Employee Material Internal Requistion Lines</field>
            <field name="model_id" ref="model_material_internal_requisition_line"/>
            <field name="domain_force">[('requisition_id.employee_id.user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="internal_requisition_department_rule" model="ir.rule">
            <field name="name">Department Material Internal Requistion</field>
            <field name="model_id" ref="model_material_internal_requisition"/>
            <field name="domain_force">['|',('employee_id.parent_id.user_id','=', user.id), ('employee_id.department_id.manager_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('material_internal_requisition.group_internal_requisition_department'))]"/>
        </record>

        <record id="internal_requisition_lines_department_rule" model="ir.rule">
            <field name="name">Department Material Internal Requistion Lines</field>
            <field name="model_id" ref="model_material_internal_requisition_line"/>
            <field name="domain_force">['|',('requisition_id.employee_id.parent_id.user_id','=', user.id), ('requisition_id.employee_id.department_id.manager_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('material_internal_requisition.group_internal_requisition_department'))]"/>
        </record>
        
        <record id="internal_requisition_manager_rule" model="ir.rule">
            <field name="name">Manager Material Internal Requisitions</field>
            <field name="model_id" ref="model_material_internal_requisition"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[
                (4, ref('stock.group_stock_user')),
                (4, ref('material_internal_requisition.group_internal_requisition_manager')),
            ]"/>
        </record>
        
        <record id="internal_requisition_lines_manager_rule" model="ir.rule">
            <field name="name">Manager Material Internal Requisitions Lines</field>
            <field name="model_id" ref="model_material_internal_requisition_line"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[
                (4, ref('stock.group_stock_user')),
                (4, ref('material_internal_requisition.group_internal_requisition_manager'))
            ]"/>
        </record>
    </data>
</odoo>