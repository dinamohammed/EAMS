<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data noupdate="1">
   
        <record id="email_template_to_department_manager" model="mail.template">
           <field name="name">Request for Material Internal Requisition - Send by Email</field>
           <field name="email_to">${object.employee_id.sudo().parent_id.work_email or object.employee_id.sudo().department_id.manager_id.work_email | safe}</field>
           <field name="email_from">${object.employee_id.sudo().work_email | safe}}</field>
           <field name="subject">Request for Material Internal Requisition - ${object.name}</field>           
           <field name="model_id" ref="material_internal_requisition.model_material_internal_requisition"/>
           <field name="auto_delete" eval="True"/>
           <field name="lang">${object.lang}</field>
           <field name="body_html"><![CDATA[
            <![CDATA[
            <div style="font-family: 'Lucida Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
                <p>Dear ${object.employee_id.sudo().parent_id.name},</p>
                <p>Approve request for Internal Requistion - ${object.name}.</p>
                <p>Thank you,</p> 
                <br/>
                <div style="width: 375px; margin: 0px; padding: 0px; background-color: #7c7bad; border-top-left-radius: 5px 5px; border-top-right-radius: 5px 5px; background-repeat: repeat no-repeat;">
                    <h3 style="margin: 0px; padding: 2px 14px; font-size: 12px; color: #DDD;">
                        <strong style="text-transform:uppercase;">${user.company_id.name}</strong></h3>
                </div>
                <div style="width: 347px; margin: 0px; padding: 5px 14px; line-height: 16px; background-color: #F2F2F2;">
                    <span style="color: #222; margin-bottom: 5px; display: block; ">
                        ${user.company_id.partner_id.sudo().with_context(show_address=True, html_format=True).name_get()[0][1] | safe}
                    </span>
                    % if user.company_id.phone:
                        <div style="margin-top: 0px; margin-right: 0px; margin-bottom: 0px; margin-left: 0px; padding-top: 0px; padding-right: 0px; padding-bottom: 0px; padding-left: 0px; ">
                            Phone:&nbsp; ${object.company_id.phone}
                        </div>
                    % endif
                    % if user.company_id.website:
                        <div>
                            Web :&nbsp;<a href="${object.company_id.website}">${user.company_id.website}</a>
                        </div>
                    %endif
                    <p></p>
                </div>
            </div>
            ]]>
            </field>
        </record>                
                        
