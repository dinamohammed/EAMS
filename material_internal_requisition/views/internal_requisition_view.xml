<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    
        <record id="material_internal_requisition_form_view" model="ir.ui.view">
            <field name="name">material.internal.requisition.form.view</field>
            <field name="model">material.internal.requisition</field>
            <field name="arch" type="xml">
                <form string="Internal Requistions">
                    <header>
                        <button name="requisition_confirm" type="object" string="Confirm" states="draft" class="btn-primary" groups="base.group_user"/>
                        <button name="manager_approve" type="object" string="Department Approve" states="dept_confirm,cancel" class="btn-primary" groups="material_internal_requisition.group_internal_requisition_department"/>
                        <button name="user_approve" type="object" string="Approve" states="ir_approve" class="btn-primary" groups="material_internal_requisition.group_internal_requisition_manager"/>
                        <button name="request_stock" type="object" string="Create Picking" states="approve" class="btn-primary" groups="material_internal_requisition.group_internal_requisition_manager"/>
                        <button name="action_received" type="object" string="Received" states="stock" class="btn-primary"/>
                        <button name="requisition_reject" type="object" string="Reject" groups="material_internal_requisition.group_internal_requisition_department" states="dept_confirm,approve,ir_approve" />
                        <button name="action_cancel" type="object" states="draft" string="Cancel" groups="base.group_user"/>
                        <button name="reset_draft" type="object" string="Reset to Draft" states="cancel,reject,receive" class="btn-primary"/>
                        <field name="state" widget="statusbar" string="confirm" statusbar_visible="draft,dept_confirm,ir_approve,approve,stock,receive"/>
                    </header>
                    <sheet>

                    <div class="oe_button_box" name="button_box">                        
                        <button class="oe_stat_button" type="object" name="action_view_stock_picking" icon="fa-truck" groups="stock.group_stock_user">
                            <div class="o_stat_info">
                                <field name="internal_picking_count"/>
                                <span class="o_stat_text">Internal Picking</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <div class="oe_title">
                        <h1>
                            <field name="name"/><br/>
                        </h1>
                    </div>
                    </div>
                        <group>
                                <group>
                                    <field name="employee_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <field name="department_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <field name="company_id" groups="base.group_multi_company" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <field name="requisition_responsible_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                </group>
                                <group>
                                    <field name="date_request" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <field name="date_receive" attrs="{'readonly': [['state', 'in', ['reject','cancel','receive']]]}"/>
                                    <field name="date_end" attrs="{'readonly': [['state', 'in', ['reject','cancel','receive']]]}"/>                                    
                                </group>
                             </group>
                        <notebook>
                            <page string="Requisitions Lines">
                                <field name="requisition_line_ids" attrs="{'readonly': [('state', 'in', ['cancel','receive'])]}">
                                    <tree editable="bottom">
                                        <field name="requisition_type" 
                                            groups="material_internal_requisition.group_internal_requisition_user,material_internal_requisitions.group_internal_requisition_department,material_internal_requisition.group_internal_requisition_manager"                                            
                                            invisible="1" />
                                        <field name="product_id"/>
                                        <field name="description"/>
                                        <field name="virtual_available"/>
                                        <field name="qty_available"/>
                                        <field name="qty"/>
                                        <field name="uom"/>
                                    </tree>
                                </field>
                                <group>
                                    <field name="note" attrs="{'readonly': [['state', 'in', ['reject','cancel','receive']]]}" placeholder="Add Reason for Internal Requistion ...."/>
                                </group>
                            </page>
                            <page string="Picking Details" attrs="{'readonly': [['state', 'in', ['done']]]}">
                                <group>
                                    <group>
                                        <field name="location_id"
                                            groups="material_internal_requisition.group_internal_requisition_user,stock.group_stock_user" 
                                            domain="[('usage','!=', 'view')]" attrs="{'readonly': [['state', 'in', ['reject','cancel','receive']]]}"/>
                                    </group>
                                    <group>
                                        <field name="dest_location_id" groups="material_internal_requisition.group_internal_requisition_user,stock.group_stock_user" attrs="{'readonly': [['state', 'in', ['reject','cancel','receive']]]}"/>
                                        <field name="delivery_picking_id" groups="material_internal_requisition.group_internal_requisition_user,stock.group_stock_user"/>
                                        <field name="custom_picking_type_id" groups="material_internal_requisition.group_internal_requisition_user,stock.group_stock_user" attrs="{'readonly': [['state', 'in', ['reject','cancel','receive']]]}"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Other Information">
                                <group>
                                    <group>
                                        <field name="employee_confirm_id"/>
                                        <field name="date_confirm"/>
                                    </group>
                                    <group>
                                        <field name="approve_manager_id"/>
                                        <field name="date_manager_approved"/>
                                    </group>
                                    <group>
                                        <field name="approve_employee_id"/>
                                        <field name="date_user_approved"/>                                        
                                    </group>
                                    <group>                                                                            
                                        <field name="reject_employee_id"/>
                                        <field name="date_user_reject"/>
                                    </group>
                                </group>
                            </page>
                    </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        <record id="material_internal_requisition_tree_view" model="ir.ui.view">
            <field name="name">material.internal.requisition.view.tree</field>
            <field name="model">material.internal.requisition</field>
            <field name="arch" type="xml">
                <tree string="Internal Requistions">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="date_request"/>
                    <field name="date_end"/>
                    <field name="company_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <record id="material_internal_requisition_search_view" model="ir.ui.view">
            <field name="name">material.internal.requisition search</field>
            <field name="model">material.internal.requisition</field>
            <field name="arch" type="xml">
                <search string="Internal Requistions">
                    <field name="approve_manager_id"/>
                    <field name="approve_employee_id"/>
                    <field name="company_id"/>
                    <field name="date_end"/> 
                    <field name="date_done"/>     
                    <field name="department_id"/>
                    <field name="dest_location_id"/>
                    <field name="delivery_picking_id"/>
                    <field name="employee_id"/>
                    <field name="location_id"/>
                    <field name="date_manager_approved"/>                                    
                    <field name="date_request"/>
                    <field name="date_receive"/>
                    <field name="note"/>
                     <field name="state"/>
                    <field name="date_user_approved"/>
                    <group expand="0" string="Group By">
                        <filter string="Employee" name="employee_id" context="{'group_by':'employee_id'}"/>
                        <filter string="Reqisition Date" name="date_request" context="{'group_by':'date_request'}"/>
                        <filter string="Company" name="company" context="{'group_by':'company_id'}"/>
                        <filter string="Reqisition Dedline" name="date_end" context="{'group_by':'date_end'}"/>
                        <filter string="Department" name="department" context="{'group_by':'department_id'}"/>
                        <filter string="Department Manager" name="department_manager" context="{'group_by':'approve_manager_id'}"/>
                        <filter string="Approve By" name="approve_by" context="{'group_by':'approve_employee_id'}"/>
                        <filter string="Location" name="location" context="{'group_by':'location_id'}"/>
                        <filter string="Manager Approve Date" name="date_manager_approved" context="{'group_by':'date_manager_approved'}"/>
                        <filter string="User Approve Date" name="userapp_date" context="{'group_by':'date_user_approved'}"/>
                        <filter string="Destination Location" name="dest_location_id" context="{'group_by':'dest_location_id'}"/>
                        <filter string="Delivery Picking" name="delivery_picking_id" context="{'group_by':'delivery_picking_id'}"/>
                        <filter string="Reason" name="note" context="{'group_by':'note'}"/>
                        <filter string="Date Done" name="date_done" context="{'group_by':'date_done'}"/>
                        <filter string="State" name="state" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="material_internal_requisition_kanban_view" model="ir.ui.view">
            <field name="name">material.internal.requisition.view.kanban</field>
            <field name="model">material.internal.requisition</field>
            <field name="arch" type="xml">
                <kanban string="Internal Requistions" class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="date_request"/>
                    <field name="state"/>   
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title"><span><t t-esc="record.employee_id.value"/></span></strong>
                                    </div>
                                    <strong><field name="date_request" widget="date"/></strong>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left text-muted">
                                        <span><t t-esc="record.name.value"/></span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection"/>
                                    </div>
                                </div>
                            </div>
                            
                        </t>
                    </templates>                 
                </kanban>
            </field>
        </record>

        <record id="material_internal_requisition_calendar_view" model="ir.ui.view">
            <field name="name">material.internal.requisition.view.calendar</field>
            <field name="model">material.internal.requisition</field>
            <field name="arch" type="xml">
                <calendar string="Internal Requisitions" date_start="date_request" color="state">
                    <field name="employee_id"/>
                    <field name="state" widget="label_selection"/>
                </calendar>
            </field>
        </record>

        <record id="material_internal_requisition_pivot_view" model="ir.ui.view">
            <field name="name">material.internal.requisition.view.pivot</field>
            <field name="model">material.internal.requisition</field>
            <field name="arch" type="xml">
                <pivot string="Internal Requisitions">
                    <field name="employee_id" type="row"/>
                    <field name="date_request" type="row"/>
                    <field name="department_id" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="material_internal_requisition_graph_view" model="ir.ui.view">
            <field name="name">material.internal.requisition.view.graph</field>
            <field name="model">material.internal.requisition</field>
            <field name="arch" type="xml">
                <graph string="Internal Requisitions">
                    <field name="employee_id" type="row"/>                    
                    <field name="department_id" type="col"/>                
                </graph>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_material_internal_requisition">
            <field name="name">Internal Requisitions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">material.internal.requisition</field>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new Internal Requisition, the first step of a new Requisition!
              </p>
            </field>
        </record>
        
        <menuitem 
            id="menu_internal_requisition" 
            name="Requisitions" 
            groups="material_internal_requisition.group_internal_requisition_user"
            web_icon="material_internal_requisition,static/description/icon.png"/>
            
        <menuitem 
            id="menu_item_internal_requisition" 
            name="Internal Requisition" 
            parent="menu_internal_requisition"/>

        <menuitem 
            id="menu_action_internal_requisition" 
            name="Internal Requisitions" 
            parent="menu_item_internal_requisition" 
            action="action_material_internal_requisition"/>
        
    </data>
</odoo>
