<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_days_to_clear_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.days.to.clear</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <h2>Days to Clear Leaves per Employee</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Days to clear leaves</span>
                                <div class="content-group">
                                    <div class="mt16 row">
                                        <label for="days_to_clear" string="Days to Clear" 
                                               class="col-4 col-lg-4 o_light_label"/>
                                        <field name="days_to_clear" class="oe_inline" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>